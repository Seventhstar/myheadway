<h1><%= t("Listing books") %></h1>

<table class="table table-striped">
  <thead>
    <tr>
      <th><%= t("BookName")%></th>
      <th><%= t("Author")%></th>
      <th></th>

    </tr>
  </thead>

  <tbody>
    <% @books.each do |book| %>
      <tr>
        <td><%= book.name %></td>
        <td><%= book.author_name  %></td>

        <%= tool_icons(book) %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>


<%= link_to t('New Book'), new_book_path, :class=>"btn btn-success" %>
