<script>
  Vue.component('v-select', VueSelect.VueSelect)

  let app = new Vue({
    el: '.vue_app',
    mixins: [m_created],
    data: <%= fill_vue_data(@book, {
      model: 'book',
      froms: [],
      tos: [],
      noteValid: '',
      currentUser: [],
      formValid: true,
      
      filteredProjects: [],
      required_list: 'author',

      texts: 'annotation img_url',
      list_values: 'author',
      lists: "authors"
    }) %>,

    computed: { 
      imageHtml() {
        console.log('this.img_url', this.img_url)
        if (this.img_url && this.img_url!='')
          return '<img src="'+this.img_url+'" class="image_edit_form" alt="Картинка">'
        return '<span class="empty_book">'
      }
    }
    
  });

</script>
