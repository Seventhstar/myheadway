<%= form_for(@tgroup) do |f| %>

  <div class="field"><label><%= t :name %></label>
    <%= f.text_field :name %> </div>

  <div class="field"><label>Группы целей:</label>
    <%= f.collection_select(:target_ids, Target.where('parent_id is NULL'), :id, :name, {}, {multiple: true,  class: "chosen-select", :include_blank => 'None'}) %></div>


    <div class="actions">
    <%= f.submit 'Сохранить', :class => "btn btn-success" %>
    <%= link_to t('Back'), targets_path, :class => "btn btn-white" %>
  </div>

<% end %>
