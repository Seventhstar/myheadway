<%- model_class = Author -%>
  <h1><%=t "Authors" %></h1>
<table class="table table-striped">
  <thead>
    <tr>
      <th><%= t model_class.human_attribute_name(:id) %></th>
      <th><%=t model_class.human_attribute_name(:name) %></th>
      <th><%= t model_class.human_attribute_name(:created_at) %></th>
      <th><%=t model_class.human_attribute_name(:statements_count) %></th>      
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @authors.each do |author| %>
      <tr>
        <td><%= link_to author.id, author_path(author) %></td>
        <td><%= link_to author.name, statements_path(:author_id => author.id) %></td>
        <td><%=l author.created_at %></td>
        <td><%=  author.statements.count %></td>
        <td><%= link_to image_tag('edit.png'), edit_author_path(author) %>
    <%= link_to image_tag('delete.png'), author, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        
      </tr>
    <% end %>
  </tbody>
</table>


<%= will_paginate @authors %>
<br/>

<%= link_to t('New Author'), new_author_path, :class=>"btn btn-success" %>
