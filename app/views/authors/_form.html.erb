<%= form_for(@author) do |f| %>
  
  <div class="field">
    <%= f.label t :name, :class => 'control-label' %>
    <%= f.text_field :name, :class => 'text_field' %>
  </div>

  <div class="actions">
    <%= f.submit nil, :class => "btn btn-success"%>
    <%= link_to t('Back'), authors_path, :class => "btn" %>
  </div>
<% end %>
