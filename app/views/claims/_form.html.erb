<%= form_for(@claim) do |f| %>
  <% if @claim.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@claim.errors.count, "error") %> prohibited this claim from being saved:</h2>

      <ul>
      <% @claim.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label t :name %><br>
    <%= f.text_field :name, class: 'fullwidth' %>
  </div>

  <div class="field">
    <%= f.label 'Дата' %>
    <%= f.text_field :date, :value=>@claim.date.try('strftime',"%d.%m.%Y"), :class => 'datepicker' %>
  </div>

  <%= f.hidden_field :user_id, :value => current_user.id %>
  <div class="field">
    <%= f.label t :reached %><br>
    <%= f.check_box :reached %>
  </div>
  <div class="actions">
    <%= f.submit 'Сохранить',class: 'btn btn-success' %>
    <%= link_to 'Отмена', claims_path, class: 'btn btn-cancel' %>
  </div>
<% end %>
