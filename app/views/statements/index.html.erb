<% if @author %>
	<h3>Высказывания автора: <%= @author.name %></h3>
<% else %>
	<h2>Высказывания известных людей</h2>
<% end %>



<%= form_tag statements_path, :method => 'get', :id => "statements_search" do %>
  <p>
    <%= text_field_tag :search, params[:search] %> 
    <%= submit_tag "Поиск", :name => nil, :class=>"btn" %>
  </p>
  <div id="statement"><%= render 'statements' %></div>
<% end %>



