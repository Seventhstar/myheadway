<%= form_for(@notice) do |f| %>
  <% if @notice.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@notice.errors.count, "error") %> prohibited this notice from being saved:</h2>

      <ul>
      <% @notice.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field"><%= f.label t :name %><br>
    <%= f.text_field :name, class: 'fullwidth' %></div>

  <label class="inp_btn_label"><div class="inp_btn checkbox"><%= f.check_box :actual, {}, "true", "false" %></div>Актуально</label>

  <%= f.hidden_field :user_id, :value => current_user.id %>

  <div class="actions">
    <%= f.submit 'Сохранить', class: 'btn btn-success' %>
    <%= link_to 'Назад', notices_path, class: 'btn btn-cancel' %>
  </div>
  
<% end %>
