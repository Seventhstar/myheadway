<%= form_for(@feeling) do |f| %>

  <div class="field">
    <%= f.label t("Feeling") %>
    <%= f.text_area :content, :size =>"120x5", :class => "width_area" %>
  </div>
  <div class="field">
    <%= f.label t(:day) %>
    <%= f.text_field :day, :value=>@feeling.day.try('strftime',"%d.%m.%Y"), :class => 'datepicker' %>
  </div>



  <div class="actions">
    <%= submit_cancel feelings_path %>
  </div>
<% end %>


